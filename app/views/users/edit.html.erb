<div class="panel panel-default">

<div class="panel-heading">
  <h1>Editing User</h1>
</div>

<div class="panel-body">
  <%= render 'form', user: @user %>
</div>

<div class="panel-footer">
  <%= link_to 'Show', @user, class: "btn btn-info" %>     &nbsp; | &nbsp;  
  <%= link_to 'Back', root_path, class: "btn btn-info" %>  &nbsp; &nbsp; &nbsp; | &nbsp; &nbsp; &nbsp; <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
</div>